<h1>Contact</h1>
<div class="jumbotron text-center">
  <br>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label>Your email address:</label>
        {{input type="email" class="form-control" placeholder="email" value=emailAddress autofocus="autofocus"}}
      </div>
      <div class="form-group">
        <label>Message:</label>
        {{textarea class="form-control" placeholder="message. (At least 5 charaters.)" rows="5" value=message}}
      </div>
      <button class="btn btn-success" {{action 'sendMessage'}} disabled="{{unless isValid 'disabled'}}">Send</button>
    </div>

    {{#if responseMessage}}
    <div class="col-md-6">
      <br>
      <div class="alert alert-success">
        <h4>Your message has been sent.</h4>
        <p>{{responseMessage}}</p>
      </div>
    </div>
    {{/if}}

  </div>
</div>
