
<!-- Itâ€™s a simple striped table with two columns -->
<h1>Authors</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
    </tr>
  </thead>
  <tbody>
    <!-- model array contains all the record about authors
    so we can list them with an each block. Showing the author.name -->
    {{#each model as |author|}}
      <tr>
        <td>{{author.name}}</td>
        <td>
          <ul>
            <!-- We setup in our model/author.js file, that books field connect to Book model with a hasMany relationship. Ember Data fills that field with an array of records. We can use an each block to iterate them and list in our table -->
            {{#each author.books as |book|}}
              <li>{{book.title}}</li>
            {{/each}}
          </ul>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
