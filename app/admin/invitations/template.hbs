<h2>Invitations</h2>
<div class="row">
        <!-- {{#each}}{{/each}} handlebar block helper to generate a list. The model is refrenced cause it contains an array of invitations. -->
    <!-- it retrives data/model from server , that function is in the invitation ROUTE HANDLER   -->
  {{#each model as |invitation|}}
    <div class="col-md-4">
      <div class="panel panel-default invitation-item">
        <div class="panel-heading">
          <h3 class="panel-title">{{invitation.id}}</h3>
        </div>
        <div class="panel-body">
          <p>Message: {{invitation.email}}</p>
        </div>
        <div class="panel-footer text-right">
          <!-- {{#link-to 'invitation.edit' invitation.id class='btn btn-success btn-xs'}}Edit{{/link-to}} -->
          <button class="btn btn-danger btn-xs" {{action 'deleteInvitation' invitation}}>Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
